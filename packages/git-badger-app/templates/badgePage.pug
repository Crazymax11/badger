html
    head
        include head.pug
    body
        nav-header
        div.section
            h1 #{badge.name}
            img(src=badge.image)
            br
            span.content #{badge.description}
            br
            div.level
                table
                    thead
                        tr
                            th status
                            th badge
                    tbody
                        each example in badge.examples
                            tr
                                td
                                    span #{example}
                                td
                                    badge-shield(badge=badge.name, status=example)
            test-badge-form(badge=badge.name)